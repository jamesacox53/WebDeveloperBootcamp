<% layout('layouts/boilerplate') %>
<h1>Edit Campground</h1>
<form action="/campgrounds/<%= campgroundObj._id %>?_method=PUT" method="post">
    <div>
        <label for="title">Title</label>
        <input type="text" id="title" name="campground[title]" value="<%= campgroundObj.title %>">
    </div>
    <div>
        <label for="location">Location</label>
        <input type="text" id="location" name="campground[location]" value="<%= campgroundObj.location %>">
    </div>
    <button>Update Campground</button>
</form>
<a href="/campgrounds/<%= campgroundObj._id %>">Back to Campground</a>