<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= farmObj.name %></title>
</head>
<body>
    <h1><%= farmObj.name %></h1>
    <ul>
        <li>City: <%= farmObj.city %></li>
        <li>Email: <%= farmObj.email %></li>
    </ul>
    <h2>Products</h2>
    <ul>
        <% for (let productObj of farmObj.products) { %>
            <li><a href="/products/<%= productObj._id %>"><%= productObj.name %></a></li>
        <% } %>
    </ul>
    <a href="/farms/<%= farmObj._id %>/products/new">Add Product</a>
    <a href="/farms">All Farms</a>
    <form action="/farms/<%= farmObj._id %>?_method=DELETE" method="post">
        <button>Delete</button>
    </form>
</body>
</html>